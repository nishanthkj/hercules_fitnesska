generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  password     String
  phone        String?
  profileImage Bytes?    
  role         Role     @default(USER)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  bills        Bill[]   @relation("UserBills")
}

model Bill {
  id             String   @id @default(uuid())

  to             String
  address        String?  // Optional: You already wanted this
  invoiceNo      String   @unique
  refNumber      String?
  date           DateTime @default(now())
  customerName   String
  branch         String?
  location       String?

  userId         String                          // ðŸ”‘ Foreign key
  billedBy       User     @relation("UserBills", fields: [userId], references: [id])

  totalAmount    Float
  gstAmount      Float
  netAmount      Float
  paid           Boolean  @default(false)

  items          Item[]   @relation("BilledItems")
  billedItems    Json?

  deliveryTerms  String?
  paymentTerms   String?
  warranty       String?
  bankDetails    String?
  contactPerson  String?
  contactPhone   String?

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}




model Item {
  id           String   @id @default(uuid())
  modelNumber  String
  name         String
  description  String?
  price        Float
  specialPrice Float
  image        Bytes?   // Optional image
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  bills        Bill[]    @relation("BilledItems")
}


